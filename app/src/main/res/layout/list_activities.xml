<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#46EAD413"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/evidencia" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/viewCaptureDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de captura:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:transitionName="captureDate" />

            <TextView
                android:id="@+id/viewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:transitionName="description" />

            <TextView
                android:id="@+id/viewDeliveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Fecha de entrega:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/cardview_dark_background"
                android:transitionName="deliveryDate" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>